@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color:#fff;border-bottom:1px solid #f0f0f0;position:fixed;">
        <MudImage Src="/images/civil_defence_logo_black.jpg" Style="height:50px;"></MudImage>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" Color="Color.Dark" />
        <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" Color="Color.Dark" />
    </MudAppBar>
        <MudDrawerContainer Class="mud-height-full" >
        <MudDrawer @bind-Open="@open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Style="height: calc(100vh - 64px);position: absolute;top: 64px;">
                <NavMenu />
            </MudDrawer>
        </MudDrawerContainer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="my-2 pt-3" Style="max-width:95%;margin-left:4%;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
