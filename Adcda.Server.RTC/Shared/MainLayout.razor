@inherits LayoutComponentBase

<style>
    #btnNotifications {
        border: 1px solid;
        border-radius: 10px;
        border-color: #E0E3E7;
        height: 34px;
        width: 34px;
        margin-right:10px;
    }

        #btnNotifications > span > svg {
            font-size: 1.25rem !important;
        }

    #btnSettings {
        border: 1px solid;
        border-radius: 10px;
        border-color: #E0E3E7;
        height: 34px;
        width: 34px;
    }

        #btnSettings > span > svg {
            font-size: 1.25rem !important;
        }
</style>

<MudThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color:#fff;border-bottom:1px solid #f0f0f0;position:fixed;">
        <MudImage Src="/images/civil_defence_logo_black.jpg" Style="height:50px;"></MudImage>
        <MudSpacer />
        <MudIconButton id="btnNotifications" Icon="@Icons.Material.Filled.Notifications" Color="Color.Info" />
        <MudIconButton id="btnSettings" Icon="@Icons.Material.Filled.Settings" Color="Color.Info" />
    </MudAppBar>
    <MudDrawerContainer Class="mud-height-full" >
        <MudDrawer @bind-Open="@open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Style="height: calc(100vh - 64px);position: absolute;top: 64px;">
                <NavMenu />
            </MudDrawer>
        </MudDrawerContainer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="my-2 pt-3" Style="max-width: calc(100% - 64px);width:100%;padding-left:49px;padding-right:22px;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
